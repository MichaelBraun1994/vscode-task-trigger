{
  "name": "task-trigger",
  "displayName": "Task Trigger",
  "description": "Extension to display and trigger vscode tasks.",
  "publisher": "MichaelBraun1994",
  "icon": "img/icon.png",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/MichaelBraun1994/vscode-task-trigger"
  },
  "keywords": [
    "task",
    "tasks",
    "trigger",
    "execute"
  ],
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "taskTriggerView",
          "name": "Task Trigger"
        }
      ]
    },
    "commands": [
      {
        "command": "taskTriggerView.triggerTask",
        "title": "trigger"
      }
    ],
    "configuration": {
      "title": "Task Trigger",
      "properties": {
        "tasktrigger.separatorRegex": {
          "type": "string",
          "default": ":| - ",
          "description": "Regex used to identify folders"
        },
        "tasktrigger.autoCollapseLimit": {
          "type": "number",
          "default": 5,
          "description": "Limit of entries after which a folder is automatically collapsed during loading."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.8",
    "eslint": "^9.32.0",
    "npm-run-all": "^4.1.5",
    "sinon": "^21.0.0",
    "typescript": "^5.9.2"
  }
}
